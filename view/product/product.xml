<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_qin_product_tree" model="ir.ui.view">
        <field name="name">qin.product.tree</field>
        <field name="model">qin.product</field>
        <field name="arch" type="xml">
            <tree string="Product">
                <field name="name"/>
                <field name="product_uid"/>
                <field name="category_id"/>
                <field name="uom_id"/>
                <field name="hsn_code"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_qin_product_form" model="ir.ui.view">
        <field name="name">qin.product.form</field>
        <field name="model">qin.product</field>
        <field name="arch" type="xml">
            <form string="Product">
                <sheet>
                    <div id="s_header">
                        <h1>Product</h1>
                    </div>
                    <group col="4">
                        <field name="name"/>
                        <field name="product_uid"/>
                        <field name="product_group_id"/>
                        <field name="sub_group_id"/>
                        <field name="category_id"/>
                        <field name="uom_id"/>
                        <field name="hsn_code"/>
                        <field name="description"/>
                    </group>
                    <field name="warehouse_ids"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_qin_product" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="res_model">qin.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
