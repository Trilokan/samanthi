<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_leave_voucher_tree" model="ir.ui.view">
        <field name="name">leave.voucher.tree</field>
        <field name="model">leave.voucher</field>
        <field name="arch" type="xml">
            <tree string="Leave Voucher">
                <field name="date"/>
                <field name="name"/>
                <field name="person_id"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_leave_voucher_form" model="ir.ui.view">
        <field name="name">leave.voucher.form</field>
        <field name="model">leave.voucher</field>
        <field name="arch" type="xml">
            <form string="Leave Voucher">
                <sheet>
                    <div id="s_header">
                        <h1>Leave Voucher</h1>
                    </div>
                    <group col="4">
                        <field name="date"/>
                        <field name="name"/>
                        <field name="person_id"/>
                    </group>
                    <field name="credit_ids">
                        <tree>
                            <field name="select_rec"/>
                            <field name="date"/>
                            <field name="leave_type_id"/>
                            <field name="description"/>
                            <field name="total_days"/>
                            <field name="available_days"/>
                            <field name="reconcile_days"/>
                            <field name="balance_days"/>
                        </tree>
                    </field>
                    <field name="debit_ids">
                        <tree>
                            <field name="select_rec"/>
                            <field name="date"/>
                            <field name="leave_type_id"/>
                            <field name="description"/>
                            <field name="total_days"/>
                            <field name="available_days"/>
                            <field name="reconcile_days"/>
                            <field name="balance_days"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_leave_voucher" model="ir.actions.act_window">
        <field name="name">Leave Voucher</field>
        <field name="res_model">leave.voucher</field>
        <field name="view_voucher">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
